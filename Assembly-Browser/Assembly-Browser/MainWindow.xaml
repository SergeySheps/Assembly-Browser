<Window x:Class="Assembly_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly_Browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <TextBlock HorizontalAlignment="Left" 
                       Margin="198,10,0,0" Background="LightGray" 
                       TextWrapping="Wrap" Text="{Binding OutputString}"
                       VerticalAlignment="Top"
                       Width="569"
                       />
        </ScrollViewer>
        <Button Content="Load Assembly"  Command="{Binding OpenCommand}" HorizontalAlignment="Left" Margin="30,39,0,0" VerticalAlignment="Top" Width="98" Height="25">
        </Button>
    </Grid>
</Window>
